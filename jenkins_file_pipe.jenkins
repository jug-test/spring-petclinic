pipeline {
    agent any

    stages {
        stage('CHECKOUT') {
            steps {
                echo 'Checkout'
            }
        }
        stage('BUILD') {
            steps {
                sh './mvnw package'
                sh 'cat *.jar > spring_petclinic:$BUILD_NUMBER'
                echo 'Build'
            }
        }
        stage('CREATE ARTIFACT') {
            steps {
                echo 'Create artifact'
                sh 'docker build -t spring:$BUILD_NUMBER .'
            }
        }
        stage('DEPLOY') {
            steps {
                echo 'Deploy'
            }
        }
    }
}
