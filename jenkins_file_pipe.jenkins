pipeline {
    agent any

    stages {
        stage('CHECKOUT') {
            steps {
                echo 'Checkout'
            }
        }
        stage('BUILD') {
            steps {
                sh './mvnw package'
                echo 'Build'
            }
        }
        stage('CREATE ARTIFACT') {
            steps {
                echo 'Create artifact'
                sh 'docker build -t /var/lib/jenkins/workspace/mp_main/target/*.jar:$BUILD_NUMBER .'
            }
        }
        stage('DEPLOY') {
            steps {
                echo 'Deploy'
            }
        }
    }
}
